<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
android:layout_gravity="center"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="5dp"
card_view:cardCornerRadius="4dp"
card_view:cardElevation="20dp"
card_view:cardBackgroundColor="@color/cardview_dark_background"
android:elevation="7dp"
android:background="@color/cardview_dark_background"
android:layout_marginBottom="20dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Les CardView agissent comme des FrameLayout,
     pour avoir une organisation verticale nous devons
     donc rajouter un LinearLayout -->

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            tools:text="Name"
            android:textColor="#ffffbb33"
            android:text="Name"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="QuantitÃ© : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAmountLabel"
                android:layout_weight="1"
                android:textColor="#ffffff" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAmountValue"
                android:layout_weight="1"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Attaque minimum : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMinAttackLabel"
                android:layout_weight="1"
                android:textColor="#ffffff" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMinAttackValue"
                android:layout_weight="1"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Attaque maximum : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMaxAttackLabel"
                android:layout_weight="1"
                android:textColor="#ffffff" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMaxAttackValue"
                android:layout_weight="1"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>