<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingRight="10dp"
android:paddingLeft="10dp"
android:paddingTop="10dp"
android:paddingBottom="10dp"
android:weightSum="1"
android:background="@drawable/button_border_white">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:id="@+id/llShipInfo"
            android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            tools:text="Name"
            android:textColor="@color/colorAccent"
            android:text="Name"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Quantité : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAmountLabel"
                android:layout_weight="1"
                android:textColor="#ffffff" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAmountValue"
                android:layout_weight="1"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Attaque minimum : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMinAttackLabel"
                android:layout_weight="1"
                android:textColor="#ffffff" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMinAttackValue"
                android:layout_weight="1"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Attaque maximum : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMaxAttackLabel"
                android:layout_weight="1"
                android:textColor="#ffffff" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMaxAttackValue"
                android:layout_weight="1"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llQuantity"
            android:layout_alignParentRight="true">

            <TextView
                android:text="Quantité"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuantity"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray" />

            <SeekBar
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:id="@+id/sbQuantity" />

        </LinearLayout>

</RelativeLayout>